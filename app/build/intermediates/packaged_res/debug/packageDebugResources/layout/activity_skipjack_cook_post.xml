<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SkipjackCookPostActivity">

    <TextView
        android:id="@+id/goto_scan"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:background="@color/Light_Green"
        android:ems="10"
        android:fontFamily="serif"
        android:gravity="center"
        android:inputType="text"
        android:text="SCAN"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/view_shift"
        app:layout_constraintStart_toStartOf="@+id/recyclerView"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:background="@color/Primary_090"
        app:layout_constraintEnd_toEndOf="@+id/view_scanned"
        app:layout_constraintStart_toStartOf="@+id/view_steamNo"
        app:layout_constraintTop_toBottomOf="@+id/goto_pickRackCount" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="STEAM NO."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/view_shift"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@color/Amber_A400"
        android:ems="10"
        android:fontFamily="@font/roboto_mono"
        android:gravity="center"
        android:hint="#"
        android:inputType="text"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/view_steamNo"
        app:layout_constraintTop_toTopOf="@+id/view_steamNo"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="COOK : #POST"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/capt_scanned"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="SCANNED"
        app:layout_constraintBottom_toBottomOf="@+id/textView23"
        app:layout_constraintEnd_toEndOf="@+id/view_scanned"
        app:layout_constraintStart_toStartOf="@+id/view_scanned"
        app:layout_constraintTop_toTopOf="@+id/textView23" />

    <TextView
        android:id="@+id/view_steamNo"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@color/Amber_A400"
        android:ems="10"
        android:fontFamily="@font/roboto_mono"
        android:gravity="center"
        android:hint="#"
        android:inputType="text"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/view_scanned"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="20dp"
        android:background="@color/Amber_A400"
        android:ems="10"
        android:fontFamily="@font/roboto_mono"
        android:gravity="center"
        android:hint="#"
        android:inputType="text"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/goto_pickRackCount"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="RACK COUNT"
        app:layout_constraintBottom_toBottomOf="@+id/textView22"
        app:layout_constraintEnd_toEndOf="@+id/goto_pickRackCount"
        app:layout_constraintStart_toStartOf="@+id/view_shift"
        app:layout_constraintTop_toTopOf="@+id/textView22" />

    <TextView
        android:id="@+id/goto_pickRackCount"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@color/Light_Green"
        android:ems="10"
        android:fontFamily="serif"
        android:gravity="center"
        android:inputType="text"
        android:text="[=]"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_shift"
        app:layout_constraintStart_toEndOf="@+id/view_shift"
        app:layout_constraintTop_toTopOf="@+id/view_steamNo"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/goto_reset"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/Amber_A400"
        android:ems="10"
        android:fontFamily="serif"
        android:gravity="center"
        android:inputType="text"
        android:text="RESET"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/goto_scan"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        tools:ignore="TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>