<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SkipjackWipTagEditActivity">

    <EditText
        android:id="@+id/text_specy"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/Amber_A100"
        android:fontFamily="serif"
        android:gravity="clip_horizontal|center"
        android:hint="#SP"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/capt_queNo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/capt_specy"
        app:layout_constraintTop_toBottomOf="@+id/view_specy" />

    <EditText
        android:id="@+id/text_rack"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/Amber_A100"
        android:fontFamily="serif"
        android:gravity="clip_horizontal|center"
        android:hint="#RACK"
        android:singleLine="true"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/capt_queNo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/capt_specy"
        app:layout_constraintTop_toBottomOf="@+id/view_rack" />

    <EditText
        android:id="@+id/text_origin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/Amber_A100"
        android:fontFamily="serif"
        android:gravity="clip_horizontal|center"
        android:hint="#ORI"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_specy"
        app:layout_constraintEnd_toEndOf="@+id/text_queue"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_queue"
        app:layout_constraintTop_toBottomOf="@+id/view_specy" />

    <EditText
        android:id="@+id/text_tray"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/Amber_A100"
        android:fontFamily="serif"
        android:gravity="clip_horizontal|center"
        android:hint="#TRAY"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_rack"
        app:layout_constraintEnd_toEndOf="@+id/text_queue"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_queue"
        app:layout_constraintTop_toBottomOf="@+id/view_tray" />

    <EditText
        android:id="@+id/text_size"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/Amber_A100"
        android:fontFamily="serif"
        android:gravity="clip_horizontal|center"
        android:hint="#SIZE"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_origin"
        app:layout_constraintEnd_toEndOf="@+id/view_colorNew"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view_color1"
        app:layout_constraintTop_toBottomOf="@+id/view_specy" />

    <EditText
        android:id="@+id/text_each"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/Amber_A100"
        android:fontFamily="serif"
        android:gravity="clip_horizontal|center"
        android:hint="#EACH"
        android:singleLine="true"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_tray"
        app:layout_constraintEnd_toEndOf="@+id/view_colorNew"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/view_color1"
        app:layout_constraintTop_toBottomOf="@+id/view_each" />

    <TextView
        android:id="@+id/capt_specy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="SPECIES"
        app:layout_constraintStart_toStartOf="@+id/text_barcode"
        app:layout_constraintTop_toBottomOf="@+id/capt_queNo" />

    <TextView
        android:id="@+id/capt_rack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="RACK"
        app:layout_constraintStart_toStartOf="@+id/text_specy"
        app:layout_constraintTop_toBottomOf="@+id/text_specy" />

    <TextView
        android:id="@+id/capt_origin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="ORIGIN"
        app:layout_constraintStart_toStartOf="@+id/text_origin"
        app:layout_constraintTop_toBottomOf="@+id/capt_queNo" />

    <TextView
        android:id="@+id/capt_tray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="TRAY"
        app:layout_constraintStart_toStartOf="@+id/text_origin"
        app:layout_constraintTop_toTopOf="@+id/capt_rack" />

    <TextView
        android:id="@+id/capt_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="SIZE"
        app:layout_constraintEnd_toEndOf="@+id/view_size"
        app:layout_constraintStart_toStartOf="@+id/view_size"
        app:layout_constraintTop_toBottomOf="@+id/capt_queNo" />

    <TextView
        android:id="@+id/capt_each"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="EACH"
        app:layout_constraintEnd_toEndOf="@+id/view_size"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/view_size"
        app:layout_constraintTop_toTopOf="@+id/capt_tray" />

    <TextView
        android:id="@+id/view_specy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:hint="#SP"
        app:layout_constraintEnd_toEndOf="@+id/text_specy"
        app:layout_constraintStart_toStartOf="@+id/text_specy"
        app:layout_constraintTop_toBottomOf="@+id/capt_specy" />

    <TextView
        android:id="@+id/goto_save"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:background="@color/Light_Green"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="SAVE"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/text_specy"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_specy"
        app:layout_constraintTop_toBottomOf="@+id/text_rack" />

    <TextView
        android:id="@+id/goto_undo"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@color/Amber_A200"
        android:fontFamily="serif"
        android:gravity="center"
        android:singleLine="true"
        android:text="UNDO"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/text_each"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/text_each"
        app:layout_constraintTop_toTopOf="@+id/goto_save" />

    <TextView
        android:id="@+id/goto_delete"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@color/Red_A200"
        android:fontFamily="serif"
        android:gravity="center"
        android:singleLine="true"
        android:text="DELETE"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/text_tray"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/text_tray"
        app:layout_constraintTop_toTopOf="@+id/goto_save" />

    <TextView
        android:id="@+id/view_rack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:hint="#RACK"
        app:layout_constraintEnd_toEndOf="@+id/text_specy"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_specy"
        app:layout_constraintTop_toBottomOf="@+id/capt_rack" />

    <TextView
        android:id="@+id/view_origin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:hint="#ORI"
        app:layout_constraintEnd_toEndOf="@+id/text_origin"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/text_origin"
        app:layout_constraintTop_toTopOf="@+id/view_specy" />

    <TextView
        android:id="@+id/view_tray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:hint="#TRAY"
        app:layout_constraintEnd_toEndOf="@+id/text_origin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_origin"
        app:layout_constraintTop_toBottomOf="@+id/capt_tray" />

    <TextView
        android:id="@+id/view_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:hint="#SIZE"
        app:layout_constraintEnd_toEndOf="@+id/text_size"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/text_size"
        app:layout_constraintTop_toTopOf="@+id/view_specy" />

    <TextView
        android:id="@+id/view_each"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:hint="#EACH"
        app:layout_constraintEnd_toEndOf="@+id/text_size"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_size"
        app:layout_constraintTop_toBottomOf="@+id/capt_each" />

    <TextView
        android:id="@+id/capt_queNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="QUEUE NO :"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/text_queue"
        app:layout_constraintStart_toStartOf="@+id/text_barcode" />

    <TextView
        android:id="@+id/view_color1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@color/Blue_Gray_050"
        android:fontFamily="serif"
        android:gravity="center"
        android:hint="COL"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_queue"
        app:layout_constraintStart_toEndOf="@+id/text_queue" />

    <TextView
        android:id="@+id/view_colorNew"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/Blue_Gray_050"
        android:fontFamily="serif"
        android:gravity="center"
        android:hint="COL"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_queue"
        app:layout_constraintEnd_toEndOf="@+id/text_barcode"
        app:layout_constraintStart_toEndOf="@+id/view_color1"
        app:layout_constraintTop_toTopOf="@+id/text_queue" />

    <EditText
        android:id="@+id/text_queue"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/Amber_A200"
        android:ems="10"
        android:fontFamily="@font/roboto_mono"
        android:hint="#"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/capt_queNo"
        app:layout_constraintTop_toBottomOf="@+id/text_barcode" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="COOK TAG - #EDIT"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/capt_scanned"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="serif"
        android:text="SCAN TAG"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/text_barcode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@color/Cyan_A200"
        android:ems="10"
        android:fontFamily="@font/roboto_mono"
        android:gravity="start"
        android:hint="@string/hint_barcode"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/capt_scanned"
        app:layout_constraintTop_toBottomOf="@+id/capt_scanned"
        tools:ignore="TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>